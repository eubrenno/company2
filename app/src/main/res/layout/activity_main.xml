<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6237A8"
    android:orientation="vertical"
    tools:context=".login_Activity">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableEnd="@drawable/baseline_person"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="15dp"
        android:text="Username"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edtUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableEnd="@drawable/baseline_key"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="15dp"
        android:text="Password"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableEnd="@drawable/baseline_email"
        android:inputType="textEmailAddress"
        android:maxLength="80"
        android:padding="15dp"
        android:text="E-mail"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableEnd="@drawable/baseline_phone_iphone"
        android:inputType="text"
        android:maxLength="80"
        android:padding="15dp"
        android:text="Phone"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:checked="true"
            android:layout_marginLeft="70dp"
            android:text="Aceitar termos e condições"/>


        <Button
            android:id="@+id/btnSair"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10sp"
            android:text="SIGN UP"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150sp"
            android:layout_marginBottom="15sp"
            android:text="Você já tem uma conta?"
            android:layout_marginTop="20dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260sp"
            android:layout_marginBottom="15sp"
            android:text="Sign in"
            android:layout_marginTop="-10dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>